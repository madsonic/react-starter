{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "rules": {
    "indent": [
        "error",
        2
    ],
    "quotes": [
        "error",
        "single"
    ],
    "max-len": [
        "error",
        120
    ],
    "no-console": 0,
    "no-param-reassign": 0,
    "react/jsx-filename-extension": [
      1, 
      { 
        "extensions": [".js", ".jsx"] 
      }
    ]
  }
}